{#
| Variable                | Type        | Description    |
|-------------------------|-------------|----------------|
| page                    | object      |                |
| page.title              | string      | *could be html |
| page.slug               | string      | ex: "cat.show" |
| products                | Product[]   |                |
| category                | ?Category   |                |
| category.name           | string      |                |
| category.sub_categories | ?Category[] |                |
| category.url            | string      |                |
| sort_by                 | ?string     |                |
| sort_list               | ?array      | key=>value     |
| search_word             | ?string     |                |
#}
{% extends "layouts.master" %}
{% block content %}
    <div class="container mb-10 md:mb-20">
        <nav class="w-full py-5">{% component 'header.breadcrumbs' %}</nav>
        <div class="flex items-start flex-col md:flex-row">
            <div class="main-content flex-1 md:pb-20 ">
                <div class="mb-5 md:flex justify-between items-center">
                    <h2 class="font-bold mb-6 md:mb-0">{{ page.title|raw }}</h2>
                    <div class="center-between">
                        <div class="flex items-center">
                            {% if sort_list|length %}
                                <div class="flex items-center">
                                    <label class="hidden sm:block me-3 whitespace-nowrap"
                                           for="product-filter">{{ trans('pages.categories.sorting') }}</label>
                                    <select id="product-filter"
                                            class="appearance-none form-input focus:ring-transparent
                                                       focus:outline-none h-10 text-sm rounded-md  border
                                                       border-border-color w-48 pt-0 pb-1">
                                        {% for key,value in sort_list %}
                                            <option value="{{ key }}" {{ sort_by==key?'selected':'' }}>{{ value }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            {% endif %}
                            <div class="hidden items-center ms-2 md:ms-2">
                                <a href="#" data-type="grid"
                                   class="grid-trigger bg-border-color text-primary">
                                    <i class="sicon-grid"></i>
                                </a>
                                <a href="#" data-type="list"
                                   class="grid-trigger">
                                    <i class="sicon-list"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {% if products|length %}
                    <salla-infinite-scroll next-page="{{ products.next_page }}" next-page.autoload
                                           class="mb-8 products-container gird-view grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                        {% for product in products %}
                            {% include 'pages.partials.product.card' with{block_classes:'list-block'} %}
                        {% endfor %}
                    </salla-infinite-scroll>
                {% else %}
                    <div class="no-content-placeholder">
                        <i class="sicon-shopping-bag icon"></i>
                        <p>{{ trans('pages.categories.no_products') }}</p>
                    </div>
                {% endif %} 
            </div>
        </div>
    </div>

    {% if store.settings.category.testimonial_enabled %}
        {% component 'home.testimonials'%}
    {% endif %}
{% endblock %}

{% block scripts %}
    <script defer src="{{ asset('dist/product.js') }}"></script>
{% endblock %}
