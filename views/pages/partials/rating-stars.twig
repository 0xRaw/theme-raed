<template x-for="item in [1,2,3,4,5]">
    <span @mouseenter="temp = item"
          @mouseleave="temp = orig"
          class="text-gray-300 sicon-star2 me-2 text-lg"
          :class="{'text-theme-yellow': (temp >= item)}"></span>
</template>
<div x-cloak>
    {% for star in 1..5 %}
        <span x-show="orig == {{ star }}" class="text-sm text-gray-400 mx-5 {{ star<=stars?' text-theme-yellow':'' }}">{{ trans('pages.rating.'~star~'_stars')|raw }}</span>
    {% endfor %}
</div>


