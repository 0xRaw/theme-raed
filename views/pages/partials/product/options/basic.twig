{% for option_index, option in product.options %}
    {% if option.option_type=='color' %}
        <section class="bg-white p-5 rounded-md mb-5">
            <h2 class="text-sm font-bold mb-4" for="options[{{ option.id }}]">{{ option.name }}</h2>
            <div class="custom-radios custom-radios--rounded">
                {% for detail in option.details %}
                    <div class="me-8 mb-8">
                        <input {{ detail.is_selected?'checked':'' }}
                                {% if not is_cart %}
                                    data-on-change="product::get.price" data-allow-default
                                {% endif %}
                                {{ detail.is_out?"disabled":"" }}
                                name="options[{{ option.id }}]"
                                value="{{ detail.id }}"
                                required
                                id="color_option_{{ detail.id }}-{{ product.id }}"
                                type="radio"/>
                        <label class="flex flex-col items-center" for="color_option_{{ detail.id }}-{{ product.id }}">
                            <span style="background-color: {{ detail.option_value }}" class="mb-2"></span>
                            <p class="text-sm text-gray-400">{{ detail.name }}</p>
                             {% if detail.is_out %}
                                <small class=" text-gray-400">({{ trans('pages.products.out_of_stock') }})</small>
                             {% endif %}
                        </label>
                    </div>
                {% endfor %}
            </div>
        </section>

    {% elseif option.option_type=='image' %}

        <section class="bg-white p-5 rounded-md mb-5">
            <h2 class="text-sm font-bold mb-4" for="options[{{ option.id }}]">{{ option.name }}</h2>
            <div class="radio-images grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4  gap-3"
                 data-productid="{{ product.id }}"
                 data-option_id="{{ detail.id }}"
                 data-product-name="{{ product.name }}">
                {% for detail_index, detail in option.details %}
                    <div class="relative inline-block text-center w-full">
                    <input {{ detail.is_selected?'checked':'' }}
                            required
                            type="radio"
                            class="image-option"
                            id="option_{{ detail.id }}-{{ product.id }}"
                            {{ detail.is_out?"disabled":"" }}
                            data-productid="{{ product.id }}"
                            data-itemid="{{ detail.id }}"
                            name="options[{{ option.id }}]"
                            data-img-id="{{ detail.option_value }}"
                            value="{{ detail.id }}" />
                    <label for="option_{{ detail.id }}-{{ product.id }}" data-data-img-id="{{ detail.option_value }}"
                           class="go-to-slide inline-block mb-0.5 cursor-pointer rounded-md overflow-hidden h-24 md:h-20 w-full">

                        <img data-src="{{ detail.image }}" class="object-cover h-full w-full lazy-load"
                             title="{{ detail.name }}"
                             alt="{{ detail.name }}"/>

                    </label>
                    <p class="text-sm text-gray-400">{{ detail.name}}</p>
                    {% if detail.is_out %}
                        <small class="block absolute bottom-10 left-1/2 transform -translate-x-1/2  rounded-full px-2.5 pb-1 bg-red-400 text-white whitespace-nowrap">{{ trans('pages.products.out_of_stock') }}</small>
                     {% endif %}
                    </div>
                {% endfor %}
            </div>
        </section>

    {% else %}

        <section class="bg-white p-5 rounded-md mb-5">
            <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start mb-5">
                <label for="product-color" class="form-label">
                    <b class="block">
                        {{ option.name }}
                        <span class="text-red-500">*</span>
                    </b>
                </label>
                <div class="mt-1 sm:mt-0 sm:col-span-2">
                    <select class="form-input appearance-none"
                            name="options[{{ option.id }}]"
                            required
                            data-option="{{ option.id }}"
                            {{ attirubtes|raw }}>
                        {% for key,detail in option.details %}
                            <option {{ detail.is_selected ? "selected" : "" }} value="{{ detail.id }}">
                                {{ detail.full_name}}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </section>

    {% endif %}
{% endfor %}
