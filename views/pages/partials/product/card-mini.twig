<div id="product-{{ product.id }}"
     class='product-entry product-entry--minimal {{ product.is_out_of_stock ? 'out-of-stock':'' }}'>

    <div class="product-entry__image">
    <a href="{{ product.url }}">
        <img class="h-full w-full lazy-load object-{{ product.image.url|is_placeholder ? 'contain':'cover' }}"
             src="{{ asset('images/s-empty.png') }}" data-src="{{ product.image.url }}" alt="{{ product.image.alt }}"/>
    </a>
     <salla-button 
          button-type="icon" 
          fill="none"
          color="light" 
          aria-label="wishlist button"
          class="btn--wishlist animated" 
          onclick="salla.wishlist.toggle({{ product.id }})"
          data-id="{{ product.id }}">
            <i class="sicon-heart"></i>
        </salla-button>
    </div>

    <div class="flex flex-col flex-1 overflow-hidden p-5">
        <h3 class="product-entry__title leading-6 mb-2.5 max-w-full">
            <a href="{{ product.url }}">{{ product.name }}</a>
        </h3>

        <div class="w-full center-between mb-4">
            {% if product.on_sale %}
                <div class="space-s-1">
                    <h4 class="text-theme-red font-bold text-sm inline-block">{{ product.sale_price|money }}</h4>
                    <span class="text-sm text-gray-400 line-through">{{ product.regular_price|money }}</span>
                </div>
            {% else %}
                <h4 class="font-bold text-sm">{{ product.price|money }}</h4>
            {% endif %}
            {% if product.rating %}
                <div class="text-sm text-gray-400">
                    <i class="sicon-star2 text-amber-400"></i>
                    <span>{{ product.rating|number }}</span>
                </div>
            {% endif %}
        </div>

        <div class="flex items-center mt-auto">
            <salla-button onclick="salla.cart.addItem({{ product.id }})" loader-position="center"
                          class="btn--add-to-cart" width="wide"
                          fill="outline" {{ not product.is_available ? 'disabled' : '' }}>
                {% if product.is_available %}
                    {{ trans('pages.cart.add_to_cart') }}
                {% elseif product.is_donation %}
                    {{ trans('pages.products.donation_exceed') }}
                {% else %}
                    {{ trans('pages.products.out_of_stock') }}
                {% endif %}
            </salla-button>
        </div>
    </div>
</div>
