  <div class="text-center">
    <button type="button" class="btn btn-outline-dark px-11 py-2.5 relative">
        <span class="spinner-loader-wrap start-4 w-4 h-4 absolute">
            <span class="block spinner-loader w-4 h-4 animate-spin border-2 border-gray-300 rounded-full"></span>
        </span>
