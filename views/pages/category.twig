{#
| Variable                | Type        | Description    |
|-------------------------|-------------|----------------|
| products                | Product[]   |                |
| page                    | object      |                |
| page.title              | string      | *could be html |
| page.name               | string      | ex: "cat.show" |
| category                | ?Category   |                |
| category.name           | string      |                |
| category.sub_categories | ?Category[] |                |
| category.url            | string      |                |
| sort_by                 | ?array      |                |
| search_word             | ?string     |                |
#}
{% extends "layouts.master" %}
{% block content %}
    <main id="main">
        <div class="container mb-10 md:mb-20">
            <nav class="w-full py-5">
                {% component 'header.breadcrumbs' %}
            </nav>
            <div class="flex items-start flex-col md:flex-row">
                <div class="main-content flex-1 md:pb-20 ">
                    <div class="mb-5 md:flex justify-between items-center">
                        <h2 class="font-bold mb-6 md:mb-0">{{ page.title|raw }}</h2>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                {% if sort_by|length %}
                                    <div class="flex items-center">
                                        <label class="hidden sm:block me-3"
                                               for="productFilter">{{ trans('pages.categories.sorting') }}</label>
                                        <select id="productFilter" name="sort-opt"
                                                class="appearance-none form-input focus:ring-transparent focus:outline-none h-10 text-sm rounded-md  border border-border-color w-48 pt-0 pb-1">
                                            {% for key,value in sort_by %}
                                                <option value="{{ key }}">{{ value }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                {% endif %}
                                <div class="hidden md:flex items-center ms-2 md:ms-2">
                                    <a  href="#" data-type="grid"
                                       class="grid-trigger cursor-pointer mx-1 text-xl w-10 h-10 rounded-md flex items-center justify-center bg-border-color text-primary"><i
                                                class="sicon-grid"></i></a>
                                    <a href="#" data-type="list"
                                       class="grid-trigger cursor-pointer mx-1 text-xl w-10 h-10 rounded-md flex items-center justify-center text-gray-400"><i
                                                class="sicon-list"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if products|length %}
                        <div class="mb-8 products-container gird-view grid sm:grid-cols-2  grid-flow-row gap-6 md:grid-cols-auto-fill">
                            {% for product in products %}
                                {% include 'pages.partials.product.card' %}
                            {% endfor %}
                        </div>
                        {% include 'pages.partials.loader-status' with {next_page:products.next_page} %}
                    {% else %}
                        <div class="placeholder-block placeholder-block--no-category flex flex-col justify-center items-center pt-16 px-8">
                            <i class="sicon-inbox block text-5xl text-gray-300 mb-2"></i>
                            <p class="text-base text-gray-500">
                                <span>{{ trans('pages.categories.no_products') }}</span>
                                {{ page.title|raw }}
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('dist/category.js') }}"></script>
{% endblock %}
