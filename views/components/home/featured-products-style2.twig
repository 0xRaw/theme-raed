{#
| Variable                      | Type      | Description                                                         |
|-------------------------------|-----------|---------------------------------------------------------------------|
| items                         | array     | shared variable in all layout, index.twig, and all components views |
| items[].title                 | string    | Section title                                                       |
| items[].name                  | string    | Alias for title                                                     |
| items[].type                  | string    | category,most_sales,latest_products,chosen_products                 |
| items[].featured_product      | Product   |                                                                     |
| items[].special_product.id    | string    | Product string id                                                   |
| items[].special_product.title | string    | Product Name                                                        |
| items[].products[]            | Product[] |                                                                     |
| items[].limit                 | Int       | Number of products to be shown                                      |
| items[].id                    | String    | Section id                                                          |
| postion                       | int       | Sorting number starts from zero                                     |
| is_slider                     | Bool      | Products should be movable or static                                |
#}
{% set component_id='featured-products-style2-' ~ position %}
<section class="s-block s-block-tabs s-block--tabs-produtcs bg-gray-bg2 pb-8 sm:pb-16 first-of-type:mt-0 mt-8 sm:mt-16 pt-8 sm:pt-16" id="{{ component_id }}">
  <div class="container {{ is_slider ? 'px-0 lg:px-5':'' }}">

      <div class="tabs {{ is_slider ? '':'-mx-5 lg:mx-0' }} text-center pb-6 sm:pb-10 px-5 space-s-1 md:space-s-4 whitespace-nowrap overflow-x-auto hide-scroll">
          {% for section in items %}
              <button class="tab-trigger cursor-pointer btn--outline-primary btn {{ loop.first?'btn--primary text-white':'' }}"
                      data-target="{{ component_id }}-{{ section.id }}"
                      data-component-id="{{ component_id }}"
                      data-type="style2"
                      type="button">{{ section.title }}</button>
          {% endfor %}
      </div>

      <div class="tabs-wrapper">
        {% for section in items %}
            <div id="{{ component_id }}-{{ section.id }}" class=" overflow-hidden">
                {% if is_slider %}
                    <div class="swiper product-slider -mx-5 lg:-mx-3.75 lg:w-[calc(100%+30px)] pe-12 sm:pe-16 lg:pe-0 ps-8 lg:ps-0" data-id="{{ component_id }}-{{ section.id }}">
                      <div class="swiper-wrapper flex">
                          {% for product in section.products %}
                              <div class="h-auto swiper-slide featured-item slide--one-fourth">
                                  {% include 'pages.partials.product.card' %}
                              </div>
                          {% endfor %}
                      </div>
                    </div>
                    <div class="hidden md:block text-center pt-7 space-s-3" dir="rtl">
                        <button class="slider-prev btn--md-arrow">
                            <i class="sicon-keyboard_arrow_right"></i>
                        </button>
                        <button class="slider-next btn--md-arrow">
                            <i class="sicon-keyboard_arrow_left"></i>
                        </button>
                    </div>
                {% else %}
                  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-8">
                    {% for product in section.products %}
                      <div class="featured-item">
                        {% include 'pages.partials.product.card' with {is_horizontal:true, show_desc:true} %}
                      </div>
                    {% endfor %}
                  </div>
                {% endif %}
            </div>
        {% endfor %}
      </div>
  </div>
</section>