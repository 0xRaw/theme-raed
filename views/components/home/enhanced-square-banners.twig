{#
| Variable                        | Type     | Description                                                               |
|---------------------------------|----------|---------------------------------------------------------------------------|
| component                       | object   | Contains merchant settings for fields from theme.json `component` section |
| component.banners               | object[] | list of banners                                                           |
| component.banners[].image       | string   |                                                                           |
| component.banners[].url         | string   |                                                                           |
| component.banners[].title       | ?string  |                                                                           |
| component.banners[].description | ?string  |                                                                           |
| position                        | int      | Sorting number start from zero                                            |
#}
<section class="s-block s-block--banners container ">
    <div class="grid grid-cols-2 md:grid-cols-3 grid-flow-row gap-3 sm:gap-8">
        <div class="col-span-2 sm:col-span-1 sm:row-span-2  bg-warmGray-200 transition-opacity hover:opacity-95 bg-cover h-lg-banner text-white text-center p-5 rounded-md overflow-hidden relative" style="background-image: url('{{ component.banners[0].image }}');">
            <a href="{{component.banners[0].url}}"
               class="flex flex-col justify-center  h-full p-11 relative z-20 xs:border border-dashed border-border-color rounded-md">
                <h3 class="text-2xl font-bold leading-12 mb-5">{{ component.banners[0].title }}</h3>
                <p>{{ component.banners[0].description }}</p>
            </a>
            <div class="overlay h-full w-full bg-black opacity-60 absolute top-0 left-0 z-10"></div>
        </div>
        {% for banner in component.banners|slice(3) %}
            <div class="banner relative p-2 xs:p-4 overflow-hidden transition-opacity hover:opacity-95 text-white text-center  bg-warmGray-200  rounded-md h-banner bg-cover"
                 style="background-image: url('{{banner.image}}');">
                <a href="{{banner.url}}"
                   class="bannerــtext flex md:opacity-0 hover:opacity-100 transition-opacity duration-500 flex-col justify-center  h-full p-0 xs:p-6 relative z-20 xs:border border-dashed border-border-color rounded-md">
                    <h3 class="banner__title text-md font-bold  mb-1 leading-6">{{banner.title}}</h3>
                    <p class="banner__description">{{banner.description}}</p>
                </a>
                <div class="overlay h-full w-full bg-black opacity-60 absolute top-0 left-0 z-10"></div>
            </div>
        {% endfor %}
    </div>
</section>