{#
| Variable         | Type       | Description                                                      |
|------------------|------------|------------------------------------------------------------------|
| limit            | string     | Maximum number of the feedbacks                                  |
| items[]          | Feedback[] | List of feedbacks/testimonials (*collection)                     |
| items[].customer | Customer   |                                                                  |
| items[].rating   | string     | 1-5                                                              |
| items[].text     | ?string    |                                                                  |
| items[].*        | Mix        | Rest attributes you can check them here =>                       |
| type             | string     | `default:store` all, product, store                              |
| position         | string     | Sorting number start from zero                                   |
#}
<section class="s-block s-block--testimonials overflow-hidden mt-8 sm:mt-16">
    <div class="container pe-0 lg:px-5">
        <div class="swiper  testimonials-slider lg:-mx-40" id="testimonials-slider-{{ position }}">
            <div class="lg:px-40">
                <div class="flex justify-between mb-6 sm:mb-8">
                    <h2 class="font-bold text-lg text-gray-500">{{ trans('blocks.home.testimonials') }}</h2>
                </div>
            </div>
            <div class="swiper-wrapper">
                <!-- Slides -->
                {% for item in items %}
                    <div class="swiper-slide testimonials-slider__slide w-10/12 lg:w-auto">
                        {# TODO:: @Adel #enhance - reduce --- #}
                        <div class="testimonial">
                            <div class="testimonial__avatar w-12 h-12 lg:w-20 lg:h-20 rounded-full overflow-hidden me-3 flex-shrink-0">
                                <img src="{{ item.customer.avatar }}" alt="{{ item.customer.full_name }}"
                                     class="w-full h-full object-cover">
                            </div>
                            <div class="flex-1 testimonial__text">
                                <p class="leading-6 mb-2 xs:mb-6 mt-8 sm:mt-0">{{ item.text }}</p>

                                <!-- footer -->
                                <div class="flex justify-between items-center">
                                    <div class="testimonial__info">
                                        <h4 class="font-bold text-xs xs:text-sm">{{ item.customer.full_name }}</h4>
                                        <div class="text-sm text-gray-400">{{ item.customer.city }}</div>
                                    </div>
                                    <div class="testimonial__rating text-sm absolute top-6 sm:static">
                                        {% for i in range(0, item.stars) %}
                                            <i class="sicon-star2 text-theme-yellow"></i>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>

                            <!-- absolute -->
                            <div class=" lg:block testimonial__border absolute h-full w-1.5 bg-primary top-0 start-0 rounded-md"></div>
                            <i class="hidden lg:block testimonial__icon absolute  top-10 end-10 text-primary text-5xl  sicon-quote-open"></i>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <button aria-label="Previous Slide" class="slider-prev btn--md-white-arrow lg">
              <i class="sicon-keyboard_arrow_right"></i>
            </button>
            <button aria-label="Next Slide" class="slider-next btn--md-white-arrow lg">
              <i class="sicon-keyboard_arrow_left"></i>
            </button>
        </div>
    </div>
</section>