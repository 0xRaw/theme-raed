{#
| Variable         | Type       | Description                                                      |
|------------------|------------|------------------------------------------------------------------|
| limit            | string     | Maximum number of the feedbacks                                  |
| items[]          | Feedback[] | List of feedbacks/testimonials (*collection)                     |
| items[].customer | Customer   |                                                                  |
| items[].rating   | string     | 1-5                                                              |
| items[].text     | ?string    |                                                                  |
| items[].*        | Mix        | Rest attributes you can check them here =>                       |
| type             | string     | `default:store` all, product, store                              |
| position         | string     | Sorting number start from zero                                   |
#}
<section class="s-block s-block--testimonials overflow-hidden mt-8 sm:mt-16">
    <div class="container pe-0 lg:px-5">
        <div class="swiper testimonials-slider" id="testimonials-slider-{{ position }}">
            <div class="flex justify-between mb-6 sm:mb-8">
                <h2 class="font-bold text-lg text-gray-500">{{ trans('blocks.home.testimonials') }}</h2>
            </div> 

            <div class="swiper-wrapper">
                {% for item in items %}
                    <div class="swiper-slide testimonials-slider__slide px-2 lg:px-3.75">
                        <div class="testimonial">
                            <div class="testimonial__inner">
                              <div class="testimonial__avatar">
                                  <img src="{{ item.customer.avatar }}" alt="{{ item.customer.full_name }}"
                                      class="w-full h-full object-cover">
                              </div>
                              <div class="flex-1 testimonial__text">
                                  <p class="leading-6 mb-2 xs:mb-6 mt-4 sm:mt-0">{{ item.text }}</p>
                                  <div class="flex flex-col lg:flex-row justify-center lg:justify-between items-center">
                                      <div class="testimonial__info">
                                          <h4 class="font-bold text-xs xs:text-sm">{{ item.customer.full_name }}</h4>
                                          <div class="text-sm text-gray-400">{{ item.customer.city }}</div>
                                      </div>
                                      <div class="testimonial__rating text-sm absolute top-6 sm:static">
                                          {% for i in range(0, item.stars) %}
                                              <i class="sicon-star2 text-theme-yellow"></i>
                                          {% endfor %}
                                      </div>
                                  </div>
                              </div>
                              <i class="testimonial__icon sicon-quote-open"></i>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <button aria-label="Previous Slide" class="slider-prev btn--md-white-arrow">
              <i class="sicon-keyboard_arrow_right"></i>
            </button>
            <button aria-label="Next Slide" class="slider-next btn--md-white-arrow">
              <i class="sicon-keyboard_arrow_left"></i>
            </button>
        </div>
    </div>
</section>