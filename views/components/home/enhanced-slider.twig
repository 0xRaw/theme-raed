{#
| Variable                       | Type     | Description                                                               |
|--------------------------------|----------|---------------------------------------------------------------------------|
| component                      | object   | Contains merchant settings for fields from theme.json `component` section |
| component.slides               | object[] | list of slides                                                            |
| component.slides[].image       | string   | Image url                                                                 |
| component.slides[].title       | ?string  |                                                                           |
| component.slides[].description | ?string  |                                                                           |
| position                       | int      | Sorting number start from zero                                            |
#}
<section class="s-block home-slider s-block--hero-slider wide-placeholder mt-8 sm:mt-16 first-of-type:mt-0">
    <div class="swiper home-slider main-slider" id="main-slider-{{ position }}">
        <div class="swiper-wrapper">
            {% for slide in component.slides %}
                <div class="swiper-slide lazy-background" data-src="{{ slide.image }}">
                  <div class="overlay absolute transition top-0 bg-black opacity-60 w-full h-full"></div>
                    <div class="flex-center container pb-16 sm:pb-0 home-slider__content relative h-full">
                        <div class=" w-4/6 text-center md:w-7/12 lg:w-5/12 text-white">
                            <h3 class="main-slide-anime opacity-0 lg:text-title-size font-bold leading-tight mb-4">{{ slide.title }}</h3>
                            <p class="line-clamp-2 main-slide-anime opacity-0 description">{{ slide.description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <button aria-label="Previous Slide" class="slider-prev btn--md-white-arrow">
          <i class="sicon-keyboard_arrow_right"></i>
        </button>
        <button aria-label="Next Slide" class="slider-next btn--md-white-arrow">
          <i class="sicon-keyboard_arrow_left"></i>
        </button>
    </div>
</section>