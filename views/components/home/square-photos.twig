{#
| Variable          | Type   | Description                                                      |
|-------------------|--------|------------------------------------------------------------------|
| title             | string | Section title                                                    |
| items[]           | array  | List of images                                                   |
| items[].url       | Bool   | Should set overlay on the background or not                      |
| items[].link_type | string | category,product,offers,page,external_link,brand                 |
| items[].image.url | string |                                                                  |
| items[].image.alt | string |                                                                  |
| items[].text      | string | Visible title for the photo                                      |
| position          | Int    | Sorting number start from zero                                   |
#}
<section class="s-block s-block--banners container mt-8 sm:mt-16">
    <div class="grid {{ items|length <= 3 ? 'md:grid-cols-' ~ items|length : 'md:grid-cols-3' }} grid-flow-row gap-3 sm:gap-8">
        <div class="banner-entry sm:col-span-1 sm:row-span-2 p-5 lazy-background" data-src="{{ items[0].image.url }}">
            <a href="{{ items[0].url }}"
               class="flex flex-col justify-center  h-full p-11 relative z-1 xs:border border-dashed border-border-color rounded-md">
                {% if items[0].text %}
                    <h3 class="text-2xl font-bold leading-12 mb-5">{{ items[0].text }}</h3>
                {% endif %}
            </a>
            <div class="overlay h-full w-full bg-black opacity-60 absolute top-0 left-0 "></div>
        </div>
        {% for item in items|slice(1,4) %}
            <div class="banner-entry lazy-background {{ items|length <= 3 ? "h-lg-banner" : "h-banner" }}" data-src="{{ item.image.url }}">
                <a href="{{ item.url }}"
                   class="banner-entryــtext {{ items|length <= 3 ? '':'md:opacity-0' }}"
                   {% if item.link_type == 'external_link' %}target="_blank"{% endif %}>
                    {% if item.text %}
                        <h3 class="font-bold   {{ items|length <= 3 ? 'text-2xl leading-12 mb-5':'banner__title text-md mb-1 leading-6' }}">{{ item.text }}</h3>
                    {% endif %}
                </a>
            </div>
        {% endfor %}
    </div>
</section>