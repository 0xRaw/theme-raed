{#
| Variable                           | Type     | Description                                                               |
|------------------------------------|----------|---------------------------------------------------------------------------|
| component                          | object   | Contains merchant settings for fields from theme.json `component` section |
| component.merge_with_top_component | bool     |                                                                           |
| component.title                    | ?string  |                                                                           |
| component.links                    | object[] | list of links                                                             |
| component.links[].icon             | string   |                                                                           |
| component.links[].title            | string   |                                                                           |
| component.links[].url              | string   |                                                                           |
| position                           | int      | Sorting number start from zero                                            |
#}
{#TODO:: shorten classes#}
{# TODO:: @Adel #enhance - classes can be cleaned using category-slider-entry --- #}

<section class="s-block s-block--categories relative overflow-hidden mt-8 {{ component.merge_with_top_component and position?'merge-with-top-component -mt-24 md:-mt-28':'' }}">
    <div class="container">
        <h2 class="s-block--categories__title font-bold text-lg mb-6 sm:mb-8 relative z-1 min-h-[28px]">{{ component.title }}</h2>
        <div class="swiper category-slider -mx-5 lg:-mx-3.75 lg:w-[calc(100%+30px)] pe-12 sm:pe-16 lg:pe-0 ps-2 lg:ps-0" id="main-links-{{ position }}">
            <div class="swiper-wrapper flex justify-center">
                <!-- Slides -->
                {% for link in component.links %}
                    <div class="swiper-slide category-slider__slide w-1/2 sm:w-2/6 md:w-1/4 lg:w-1/6 px-2 lg:px-3.75">
                        <a href="{{ link.url }}"
                           class="bg-white rounded-md h-36 mb-5 flex flex-col items-center justify-center text-gray-400 transition-shadow duration-500 hover:shadow-default hover:text-gray-500">
                            <i class="{{ link.icon }} text-primary text-icon-lg mb-4 cat-item"></i>
                            <h4 class="font-bold text-sm cat-item">{{ link.title }}</h4>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>