{#
| Variable    | Type   | Description          |
|-------------|--------|----------------------|
| apps        | array  |                      |
| apps[].name | string | appstore, googleplay |
| apps[].url  | string |                      |
#}
{% if apps|length %}
  <div class="lg:col-span-2 lg:ps-20">
    <h3>{{trans('blocks.footer.download_apps')}}</h3>
    <div class="flex">
      {% for app in apps %}
          <a href="{{ app.url }}" rel="noreferrer" target="_blank"  class="me-4 leading-none hover:text-primary">
            <img src="https://assets.salla.cloud/themes/default/assets/images/{{app.name}}.png" alt="{{ app.name }}"/>
          </a>
      {% endfor %}
    </div>
  </div>
{% endif %}
