{
  "version": "1.0.0",
  "theme_name": "Theme One",
  "repo_url": "https://github.com/SallaApp/theme-one",
  "features": [
    "mega_menu",
    "font_list"
  ],
  "settings": [
    {
      "type": "boolean",
      "text": "شريط علوي داكن",
      "id": "topnav_is_dark",
      "format": "switch",
      "value": true
    }
  ],
  "components": [
    {
      "name": "enhanced_slider",
      "title": "صور متحركة (محسنة)",
      "icon": "sicon-image-carousel",
      "path": "home.slider",
      "fields": [
        {
          "id": "images",
          "type": "collection",
          "format": "collection",
          "required": true,
          "minLength": 1,
          "maxLength": 10,
          "fields": [
            {
              "id": "image",
              "type": "string",
              "format": "image"
            },
            {
              "id": "title",
              "type": "string",
              "label": "عنوان رئيسي (إختياري)"
            },
            {
              "id": "sub_title",
              "type": "string",
              "format": "textarea",
              "label": "نص توضيحي (إختياري)"
            }
          ]
        }
      ]
    },
    {
      "name": "main_links",
      "title": "روابط سريعة",
      "icon": "sicon-layout-grid-rearrange",
      "path": "home.main_links",
      "fields": [
        {
          "id": "title",
          "type": "string",
          "label": "test someThing",
          "placeholder": "Placeholder text ..",
          "minLength": 6,
          "maxLength": 30,
          "required": false
        },
        {
          "id": "links",
          "type": "collection",
          "fields": [
            {
              "id": "icon",
              "type": "string",
              "format": "image"
            },
            {
              "id": "url",
              "type": "string",
              "format": "url",
              "inputType": "url"
            },
            {
              "id": "title",
              "type": "string",
              "label": "عنوان الرابط"
            }
          ]
        }
      ]
    },
    {
      "name": "brands",
      "title": "الماركات التجارية",
      "icon": "sicon-award-ribbon",
      "path": "home.brands",
      "fields": [
        {
          "id": "brands",
          "type": "items",
          "label": "العلامات التجارية",
          "format": "dropdown",
          "multichoice": true,
          "required": true,
          "source": "Brands"
        }
      ]
    },
    {
      "name": "slider_products_with_header",
      "title": "منتجات متحركة مع خلفية",
      "icon": "sicon-list-play",
      "path": "home.slider_products_with_header",
      "fields": [
        {
          "id": "products",
          "type": "items",
          "icon": "sicon-list",
          "label": "المنتجات",
          "format": "dropdown",
          "required": true,
          "source": "Products",
          "multichoice": true
        }
      ]
    },
    {
      "name": "enhanced_square_images",
      "title": "صور ثابتة (محسنة)",
      "icon": "sicon-image",
      "path": "home.enhanced_square_images",
      "fields": [
        {
          "id": "products",
          "type": "items",
          "icon": "sicon-list",
          "label": "المنتجات",
          "format": "dropdown",
          "required": true,
          "source": "Products"
        }
      ]
    }
  ],
  "support_url": "https://salla.dev"
}