{
  "version": "1.0.0",
  "theme_name": "Theme One",
  "repo_url": "https://github.com/SallaApp/theme-one",
  "features": [
    'mega_menu'
  ],
  "settings": {
    "name": "custom_input",
    "type": "string",
    "placeholder": "أضف شيء هنا",
    "label": "تجربة"
  },
  "components": {
    "enhanced_slider": {
      "name": "صور متحركة (محسنة)",
      "icon": "sicon-image-carousel",
      "path": "home.slider",
      "fields": {
        "images": {
          "type": "collection",
          "fields": {
            "image": {
              "type": "image"
            },
            "url": {
              "type": "link"
            },
            "title": {
              "type": "string",
              "icon": "sicon-format-text-alt",
              "label": "test someThing",
              "placeholder": "Placeholder text ..",
              "minLength": 6,
              "maxLength": 30,
              "required": false
            }
          }
        }
      }
    },
    "main_links": {
      "name": "روابط سريعة",
      "icon": "sicon-layout-grid-rearrange",
      "path": "home.main_links",
      "fields": {
        "title": {
          "type": "string",
          "icon": "sicon-format-text-alt",
          "label": "test someThing",
          "placeholder": "Placeholder text ..",
          "minLength": 6,
          "maxLength": 30,
          "required": false
        },
        "links": {
          "type": "collection",
          "fields": {
            "icon": {
              "type": "image"
            },
            "url": {
              "type": "link"
            },
            "title": {
              "type": "string",
              "icon": "sicon-format-text-alt",
              "label": "test someThing",
              "placeholder": "Placeholder text ..",
              "minLength": 6,
              "maxLength": 30,
              "required": false
            }
          }
        }
      }
    },
    "brands": {
      "name": "الماركات التجارية",
      "icon": "sicon-award-ribbon",
      "path": "home.brands",
      "fields": {
        "brands": {
          "type": "link"
        }
      }
    },
    "slider_products_with_header": {
      "name": "منتجات متحركة مع خلفية",
      "icon": "sicon-list-play",
      "path": "home.slider_products_with_header",
      "fields": {
        "products": {
          "type": "tems",
          "icon": "sicon-list",
          "label": "المنتجات",
          "format": "dropdown",
          "required": true,
          "source": "Manual"
        }
      }
    },
    "enhanced_square_images": {
      "name": "صور ثابتة (محسنة)",
      "icon": "sicon-image",
      "path": "home.enhanced_square_images",
      "fields": {
        "products": {
          "type": "tems",
          "icon": "sicon-list",
          "label": "المنتجات",
          "format": "dropdown",
          "required": true,
          "source": "Manual"
        }
      }
    }
  },
  "support_url": "https://salla.dev"
}